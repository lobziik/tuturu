# tuturu App Configuration
# Reverse proxy for Bun WebSocket signaling app
# Listens on internal port 8443 (receives traffic routed from stream module port 443)

# Redirect HTTP to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name a.*;

    # Redirect all HTTP requests to HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTPS server for WebRTC signaling app
server {
    listen 8443 ssl http2;
    listen [::]:8443 ssl http2;
    server_name a.*;

    # SSL configuration
    # Certificate paths use wildcard to match a.* pattern
    # Actual cert location: /etc/ssl/turn/a.yourdomain.com/
    ssl_certificate /etc/ssl/turn/a.${DOMAIN}/fullchain.pem;
    ssl_certificate_key /etc/ssl/turn/a.${DOMAIN}/privkey.pem;

    # TLS protocols and ciphers (modern, secure)
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;  # Let client choose (TLS 1.3 best practice)

    # SSL session caching
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # OCSP stapling (improves SSL handshake performance)
    ssl_stapling on;
    ssl_stapling_verify on;

    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Reverse proxy to Bun app
    location / {
        # Proxy to Bun app on bridge network
        proxy_pass http://tuturu-app:3000;
        proxy_http_version 1.1;

        # WebSocket support (critical for signaling)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Proxy headers (preserve client information)
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $server_name;

        # Timeouts for WebSocket connections (long-lived)
        proxy_connect_timeout 60s;
        proxy_send_timeout 24h;  # 24 hours for persistent WebSocket
        proxy_read_timeout 24h;

        # Buffering (disabled for WebSocket)
        proxy_buffering off;
        proxy_request_buffering off;
    }

    # Health check endpoint (fast response, no logging)
    location /health {
        proxy_pass http://tuturu-app:3000/health;
        access_log off;

        # Short timeout for health checks
        proxy_connect_timeout 3s;
        proxy_send_timeout 3s;
        proxy_read_timeout 3s;
    }

    # Favicon (prevent 404 logs)
    location = /favicon.ico {
        log_not_found off;
        access_log off;
        return 204;  # No content
    }

    # Robots.txt (prevent search engine indexing)
    location = /robots.txt {
        access_log off;
        return 200 "User-agent: *\nDisallow: /\n";
    }
}
