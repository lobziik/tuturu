# Domain Configuration
DOMAIN=yourdomain.com

# Bun App
BUN_PORT=3000
NODE_ENV=production

# STUN Servers (comma-separated URLs)
# Used for NAT traversal and discovering public IP
# Default: stun:stun.l.google.com:19302
STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302

# coturn TURN/STUN Server
# All fields required together or all omitted
# TURN provides relay when direct P2P connection fails
TURN_USERNAME=webrtc
TURN_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD_MIN_8_CHARS
TURN_REALM=yourdomain.com
EXTERNAL_IP=YOUR_VPS_PUBLIC_IP

# SSL (Let's Encrypt)
LETSENCRYPT_EMAIL=your@email.com
