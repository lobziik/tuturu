{
  "name": "tuturu-app",
  "version": "1.0.0",
  "description": "WebRTC signaling server for tuturu video calling app",
  "type": "module",
  "scripts": {
    "build": "bun build src/client.ts --outdir public --target browser --sourcemap=external",
    "build:watch": "bun build src/client.ts --outdir public --target browser --sourcemap=external --watch",
    "dev": "bun run --hot src/server.ts",
    "start": "bun run src/server.ts"
  },
  "dependencies": {
    "bun": "^1.3.4",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "bun-types": "latest"
  }
}
