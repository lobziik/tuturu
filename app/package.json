{
  "name": "tuturu-app",
  "version": "1.0.0",
  "description": "WebRTC signaling server for tuturu video calling app",
  "type": "module",
  "scripts": {
    "build": "bun build src/client/index.ts --minify --outdir public --target browser --sourcemap=inline",
    "build:watch": "bun build src/client/index.ts --outdir public --target browser --sourcemap=inline --watch",
    "build:server": "bun build --compile --minify --sourcemap ./src/server.ts --outfile ./dist/server",
    "build:prod": "bun run build && bun run build:server",
    "dev": "bun run --hot src/server.ts",
    "start": "bun run src/server.ts",
    "start:prod": "./dist/server",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "bunx tsc -p tsconfig.json --noEmit",
    "lint": "bunx eslint . --ext .ts --max-warnings=0",
    "lint:fix": "bunx eslint . --ext .ts --fix",
    "format": "bunx prettier . --write",
    "format:check": "bunx prettier . --check",
    "check": "bun run lint && bun run format:check && bun run typecheck"
  },
  "dependencies": {
    "bun": "^1.3.4",
    "redis": "^5.10.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "bun-types": "latest",
    "eslint": "^9.14.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2"
  }
}
