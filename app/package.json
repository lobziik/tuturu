{
  "name": "tuturu-app",
  "version": "1.0.0",
  "description": "WebRTC signaling server for tuturu video calling app",
  "type": "module",
  "scripts": {
    "build": "bun build src/client.ts --outdir public --target browser --sourcemap=external",
    "build:watch": "bun build src/client.ts --outdir public --target browser --sourcemap=external --watch",
    "dev": "bun run --hot src/server.ts",
    "start": "bun run src/server.ts",
    "typecheck": "bunx tsc -p tsconfig.json --noEmit",
    "lint": "bunx eslint . --ext .ts --max-warnings=0",
    "lint:fix": "bunx eslint . --ext .ts --fix"
  },
  "dependencies": {
    "bun": "^1.3.4",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "bun-types": "latest",
    "eslint": "^9.14.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2"
  }
}
